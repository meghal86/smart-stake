# Guardian Smart Automation Environment Variables
# Copy to .env.local and fill in your values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Blockchain Configuration
RPC_URL=https://mainnet.infura.io/v3/your_key
RELAYER_PRIVATE_KEY=your_relayer_private_key
DEPLOYER_PRIVATE_KEY=your_deployer_private_key

# Upstash Redis Configuration
UPSTASH_REDIS_URL=rediss://default:your_password@your_endpoint.upstash.io:6380

# Guardian Relayer Configuration
GUARDIAN_RELAYER_URL=http://localhost:3001
GUARDIAN_RELAYER_API_KEY=your_secure_api_key_here

# Smart Contract Addresses (after deployment)
GUARDIAN_SMART_WALLET_FACTORY=0x...
GUARDIAN_SMART_WALLET_IMPLEMENTATION=0x...

# Deployment Configuration
DEPLOY_CONTRACTS=false
NETWORK=goerli
ETHERSCAN_API_KEY=your_etherscan_key

# Monitoring & Alerts
SENTRY_DSN=your_sentry_dsn
SLACK_WEBHOOK_URL=your_slack_webhook

# Gas Configuration
MAX_GAS_PRICE_GWEI=50
GAS_LIMIT_BUFFER=1.2