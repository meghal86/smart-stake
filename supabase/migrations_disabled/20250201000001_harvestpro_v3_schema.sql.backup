-- HarvestPro v3 Schema Migration
-- Adds institutional and enterprise features to existing v1 schema

-- 1) Extend harvest_sessions with v3 fields

ALTER TABLE harvest_sessions
  DROP CONSTRAINT IF EXISTS harvest_sessions_status_check;

ALTER TABLE harvest_sessions
  ADD CONSTRAINT harvest_sessions_status_check
  CHECK (status IN ('draft', 'awaiting_approval', 'executing', 'completed', 'failed', 'cancelled'));

ALTER TABLE harvest_sessions
  ADD COLUMN IF NOT EXISTS execution_strategy TEXT DEFAULT 'IMMEDIATE'
    CHECK (execution_strategy IN ('IMMEDIATE', 'TWAP', 'MANUAL'));

ALTER TABLE harvest_sessions
  ADD COLUMN IF NOT EXISTS economic_substance_status TEXT
    CHECK (economic_substance_status IN ('PASS', 'WARN', 'BLOCKED'));

ALTER TABLE harvest_sessions
  ADD COLUMN IF NOT EXISTS custody_transaction_id TEXT;

-- Ensure JSONB default is valid
ALTER TABLE harvest_sessions
  ALTER COLUMN opportunities_selected SET DEFAULT '[]'::jsonb;

-- 2) Add approval_requests table (Maker/Checker governance)

CREATE TABLE IF NOT EXISTS approval_requests (
  request_id UUID PRIMARY KEY DEFAULT uuid_generate_v4(),
  session_id UUID REFERENCES harvest_sessions(session_id) ON DELETE CASCADE,
  requester_id UUID REFERENCES auth.users(id) ON DELETE CASCADE,
  approver_id UUID REFERENCES auth.users(id) ON DELETE CASCADE,
  requested_at TIMESTAMPTZ DEFAULT NOW(),
  approved_at TIMESTAMPTZ,
  status TEXT NOT NULL DEFAULT 'pending'
    CHECK (status IN ('pending', 'approved', 'rejected')),
  digital_signature TEXT,
  metadata JSONB DEFAULT '{}'
);

CREATE INDEX IF NOT EXISTS idx_approval_requests_session ON approval_requests(session_id);
CREATE INDEX IF NOT EXISTS idx_approval_requests_approver ON approval_requests(approver_id, status);

ALTER TABLE approval_requests ENABLE ROW LEVEL SECURITY;

CREATE POLICY IF NOT EXISTS p_approval_requests_user ON approval_requests
  USING (auth.uid() = requester_id OR auth.uid() = approver_id)
  WITH CHECK (auth.uid() = requester_id OR auth.uid() = approver_id);

-- 3) Extend harvest_user_settings with guardrails & custody

ALTER TABLE harvest_user_settings
  ADD COLUMN IF NOT EXISTS max_daily_loss_usd NUMERIC;

ALTER TABLE harvest_user_settings
  ADD COLUMN IF NOT EXISTS max_single_trade_notional_usd NUMERIC;

ALTER TABLE harvest_user_settings
  ADD COLUMN IF NOT EXISTS max_slippage_bps INTEGER DEFAULT 50;

ALTER TABLE harvest_user_settings
  ADD COLUMN IF NOT EXISTS require_private_rpc BOOLEAN DEFAULT FALSE;

ALTER TABLE harvest_user_settings
  ADD COLUMN IF NOT EXISTS custody_provider TEXT DEFAULT 'NONE'
    CHECK (custody_provider IN ('FIREBLOCKS', 'COPPER', 'NONE'));

ALTER TABLE harvest_user_settings
  ADD COLUMN IF NOT EXISTS custody_vault_id TEXT;

-- 4) Create sanctions_screening_logs table (KYT/AML audit trail)

CREATE TABLE IF NOT EXISTS sanctions_screening_logs (
  log_id UUID PRIMARY KEY DEFAULT uuid_generate_v4(),
  session_id UUID REFERENCES harvest_sessions(session_id) ON DELETE CASCADE,
  address_checked TEXT NOT NULL,
  risk_score NUMERIC,
  screening_provider TEXT NOT NULL,
  result TEXT NOT NULL CHECK (result IN ('CLEAN', 'FLAGGED', 'BLOCKED')),
  checked_at TIMESTAMPTZ DEFAULT NOW()
);

CREATE INDEX IF NOT EXISTS idx_sanctions_logs_session ON sanctions_screening_logs(session_id);
CREATE INDEX IF NOT EXISTS idx_sanctions_logs_address ON sanctions_screening_logs(address_checked);

ALTER TABLE sanctions_screening_logs ENABLE ROW LEVEL SECURITY;

CREATE POLICY IF NOT EXISTS p_sanctions_logs_user ON sanctions_screening_logs
  USING (EXISTS (
    SELECT 1 FROM harvest_sessions hs
    WHERE hs.session_id = sanctions_screening_logs.session_id
      AND hs.user_id = auth.uid()
  ))
  WITH CHECK (TRUE);
